<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/workStateFragment"
        android:name="com.sunbest.ui.details.WorkStateFragment"
        android:label="fragment_work_state"
        tools:layout="@layout/fragment_work_state" >
        <action
            android:id="@+id/action_workStateFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/electricGaugingFragment"
        android:name="com.sunbest.ui.details.ElectricGaugingFragment"
        android:label="fragment_electric_gauging"
        tools:layout="@layout/fragment_electric_gauging" >
        <action
            android:id="@+id/action_electricGaugingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sunbest.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/roofInfoFragment"
        android:name="com.sunbest.ui.details.RoofInfoFragment"
        android:label="fragment_roof_info"
        tools:layout="@layout/fragment_roof_info" >
        <action
            android:id="@+id/action_roofInfoFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/userCenterFragment"
        android:name="com.sunbest.ui.details.UserCenterFragment"
        android:label="fragment_user_center"
        tools:layout="@layout/fragment_user_center" >
        <action
            android:id="@+id/action_userCenterFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_userCenterFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sunbest.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_roofInfoFragment"
            app:destination="@id/roofInfoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_workStateFragment"
            app:destination="@id/workStateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userCenterFragment"
            app:destination="@id/userCenterFragment" />
        <action
            android:id="@+id/action_homeFragment_to_electricGaugingFragment"
            app:destination="@id/electricGaugingFragment" />
    </fragment>
</navigation>